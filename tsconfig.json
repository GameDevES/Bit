{
	"extends": "eslint-config-bamboo",
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es2020",
		"types": [
			"node",
			"node-fetch"
		],
		"baseUrl": ".",
		"paths": {
			"@root/*": ["*"]
		}
	},
	"include": [
		"./src/**/*",
		"./config.ts",
		"./config.example.ts"
	],
	"exclude": [
		"**/node_modules",
		"**/dist"
	]
}